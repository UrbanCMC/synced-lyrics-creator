<UserControl x:Class="SyncedLyricsCreator.Views.LyricsEditorView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:helpers="clr-namespace:SyncedLyricsCreator.Helpers"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{x:Static helpers:DesignData.LyricsEditorViewModel}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <TextBox AcceptsReturn="True" CaretIndex="{Binding CursorIndex, Mode=TwoWay}" Text="{Binding EditorText}">
    <TextBox.KeyBindings>
      <KeyBinding Command="{Binding JumpToTimestampCommand, Mode=OneTime}" Gesture="F6" />
      <KeyBinding Command="{Binding SetTimestampCommand, Mode=OneTime}" Gesture="F7" />
    </TextBox.KeyBindings>
  </TextBox>
</UserControl>
